{% extends 'base.twig' %}

{% block content %}
  <h1 class="mt-3">This is a list of articles</h1>
  <br>
  <div class="lead">So far, we have published {{ num_articles}} articles</div>

  <div class="tasks_container">
    <div class="tasks_group">
      <div class="solution_container">
        {% if num_articles == 0 %}
          <div><em>It seems there is an error and no articles have been fetched.</em></div>
        {% else %}
          <div style="margin-top: 20px;">
          {% for item in articles %}
            <div class="card" style="margin: 20px auto;">
              <div class="card-body">
                <h5 class="card-title">{{ item.title }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{ item.date }}</h6>
                <p class="card-text">{{ item.text|length > 50 ? item.text|striptags|slice(0, 350) ~ '...' : item.text }}</p>
                <a href="#" class="card-link">{{ item.slug }}</a>
              </div>
            </div>
          {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
